{
   "workbench.iconTheme": "material-icon-theme",
   "material-icon-theme.hidesExplorerArrows": true,
   "workbench.tree.renderIndentGuides": "always",
   "workbench.sideBar.location": "right",
   //"workbench.statusBar.visible": false,
   //"workbench.activityBar.visible": false,
   //"workbench.editor.showTabs": false,
   "workbench.layoutControl.enabled": false,
   "workbench.startupEditor": "none",
   "workbench.tips.enabled": false,
   "workbench.colorTheme": "Darian Theme",
   // ORIGINAL DARKER
   "workbench.colorCustomizations": {
      "editorOverviewRuler.background": "#181818",
      "editorOverviewRuler.border": "#141414",
      "sideBarSectionHeader.background": "#151515",
      "activityBar.background": "#1a1a1a",
      "titleBar.activeBackground": "#1a1a1a",
      "editorGutter.background": "#1a1a1a",
      "terminal.background": "#1a1a1a",
      "breadcrumb.background": "#1a1a1a",
      "tab.activeBackground": "#1a1a1a",
      "peekViewTitle.background": "#1a1a1a",
      "minimap.background": "#1a1a1a",
      "editorGroup.emptyBackground": "#1a1a1a",
      "editor.background": "#1a1a1a",
      "editorGroupHeader.tabsBackground": "#151515",
      "tab.inactiveBackground": "#151515",
      "panel.background": "#151515",
      "panel.border": "#151515",
      "sideBar.background": "#151515",
      "statusBar.background": "#151515",
      "terminalCursor.foreground": "#999999"
   },
   //Editor settings
   "editor.fontFamily": "JetBrains Mono",
   "editor.fontSize": 14,
   "editor.fontLigatures": true,
   "editor.lineHeight": 0,
   "editor.wordWrap": "on",
   "editor.tabSize": 2,
   "editor.detectIndentation": false,
   "editor.cursorSmoothCaretAnimation": "on",
   "editor.minimap.enabled": false,
   "editor.formatOnPaste": true,
   "editor.formatOnSave": true,
   "editor.suggestSelection": "first",
   "editor.bracketPairColorization.enabled": false,
   "editor.guides.bracketPairs": true,
   "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
   "editor.cursorBlinking": "phase",
   "editor.inlineSuggest.enabled": true,
   "editor.linkedEditing": true,
   "editor.autoClosingQuotes": "beforeWhitespace",
   "editor.smoothScrolling": true,
   "editor.guides.bracketPairsHorizontal": true,
   "editor.guides.indentation": false,
   "editor.renderWhitespace": "none",
   "editor.lightbulb.enabled": "off",
   "editor.hover.enabled": false,
   "editor.scrollbar.vertical": "visible",
   "editor.scrollbar.horizontal": "visible",
   "breadcrumbs.enabled": false,
   "explorer.confirmDragAndDrop": false,
   "explorer.confirmDelete": false,
   "editor.accessibilitySupport": "off",
   "typescript.disableAutomaticTypeAcquisition": true,
   "workbench.settings.editor": "json",
   "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
   "terminal.integrated.lineHeight": 1.8,
   "explorer.compactFolders": false,
   "workbench.tree.indent": 15,

   "editor.defaultFormatter": "esbenp.prettier-vscode",
   "prettier.singleQuote": true,
   "editor.wordWrapColumn": 82,
   "prettier.printWidth": 82,
   "prettier.tabWidth": 3,

   "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
   },
   "git.decorations.enabled": false,
   "scm.diffDecorations": "none",
   "files.insertFinalNewline": true,
   "extensions.ignoreRecommendations": false,
   "files.autoSave": "afterDelay",

   //Error Lens
   "errorLens.messageEnabled": true,
   "errorLens.messageBackgroundMode": "message",
   "errorLens.messageTemplate": " ◩ $message ‎", // ▣ ◩ ◐
   "errorLens.gutterIconsEnabled": true,
   "errorLens.gutterIconSet": "squareRounded",
   "terminal.integrated.cursorBlinking": true,
   "find-it-faster.general.showMaximizedTerminal": true,
   "find-it-faster.general.batTheme": "1337",
   "find-it-faster.general.useWorkspaceSearchExcludes": true,

   "search.exclude": {
      "**/node_modules": true,
      "**/bower_components": true,
      "**/*.code-search": true,
      "**/*.png": true,
      "**/*.jpg": true,
      "**/*.svg": true,
      "**/*.jpeg": true,
      "**/.vscodeignore": true,
      "**/.gitattributes": true,
      "**/.gitignore": true
   },

   "fiveServer.openTerminal": false,
   "remote.autoForwardPortsSource": "hybrid",
   "cSpell.enabled": false,
   "security.workspace.trust.untrustedFiles": "open",
   "terminal.integrated.cwd": "${fileDirname}",
   "terminal.integrated.defaultProfile.linux": "bash",
   "liveServer.settings.donotShowInfoMsg": true,
   "explorer.confirmPasteNative": false,
   "php.validate.executablePath": null
}
